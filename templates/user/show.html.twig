{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.nom }}{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-message flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
<div class="profile-wrapper">
