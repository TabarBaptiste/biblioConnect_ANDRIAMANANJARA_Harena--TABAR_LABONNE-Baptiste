{% extends 'base.html.twig' %}

{% block title %}Categories de livre{% endblock %}

{% block body %}

<a href="{{ path('app_categorie_new') }}">Ajouter une car√©gorie</a>
<div class="bento-wrapper">
    <h1 class="bento-title">Categories de livre</h1>

    <div class="bento-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.nom }}</td>
                    <td class="action">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="bento-btn">Modifier</a>
                        {{ include('categorie/_delete_form.html.twig') }}                    
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
